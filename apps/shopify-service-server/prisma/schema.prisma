datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  price     Float?
  updatedAt DateTime @updatedAt
}

model Transaction {
  amount    Float?
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
}

model Customer {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
